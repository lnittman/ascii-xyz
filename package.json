{
  "name": "ascii-xyz",
  "version": "1.0.0",
  "description": "AI-powered ASCII art generation platform",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter=ascii-app --filter=ascii-api --filter=ascii-ai",
    "dev:app": "turbo dev --filter=ascii-app",
    "dev:api": "turbo dev --filter=ascii-api",
    "dev:ai": "turbo dev --filter=ascii-ai",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "bump-deps": "bunx npm-check-updates --deep -u -x react-day-picker && bun install",
    "bump-ui": "bunx shadcn@latest add --all --overwrite -c packages/design",
    "migrate": "cd packages/database && bun run migrate",
    "clean": "git clean -xdf node_modules",
    "deploy:api": "turbo build --filter=api && cd apps/api && wrangler deploy",
    "deploy:ai": "turbo build --filter=ai && cd apps/ai && mastra deploy",
    "deploy:all": "turbo build --filter=api --filter=ai && cd apps/api && wrangler deploy && cd ../ai && mastra deploy"
  },
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "1.9.4",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.2",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.2",
    "chokidar": "^4.0.3",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "minimatch": "^10.0.3",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "tsx": "^4.19.4",
    "turbo": "^2.5.2",
    "ultracite": "^4.2.1",
    "unist-util-visit": "^5.0.0",
    "vitest": "^1.5.0"
  },
  "packageManager": "bun@1.1.29",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@ai-sdk/react": "2.0.0",
    "@openrouter/ai-sdk-provider": "1.0.0-beta.6",
    "@orpc/contract": "^1.7.5",
    "@sargamdesign/icons-react": "^1.4.8",
    "ai": "5.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}

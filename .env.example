# ASCII Platform Environment Variables
# Copy this file to .env.local and fill in your values

# ==========================================
# Web App (apps/app)
# ==========================================

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3006

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_AI_URL=http://localhost:3002

# Analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ==========================================
# API Service (apps/api) 
# ==========================================

# Cloudflare Workers
# Note: Most env vars are set in wrangler.toml

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@neon.tech/ascii?sslmode=require

# Clerk (for API verification)
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=

# ==========================================
# AI Service (apps/ai)
# ==========================================

# Mastra Configuration
MASTRA_API_KEY=
PORT=3002

# AI Providers (at least one required for ASCII generation)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
OPENROUTER_API_KEY=

# Database (for memory/RAG if needed)
DATABASE_URL=postgresql://user:password@neon.tech/ascii?sslmode=require

# Main App URL (for callbacks)
MAIN_APP_URL=http://localhost:3006

# ==========================================
# Email Service (Optional)
# ==========================================

# Resend
RESEND_API_KEY=

# ==========================================
# Storage (Optional)
# ==========================================

# Cloudflare R2 (for ASCII exports/backups)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=ascii-storage

# ==========================================
# Deployment
# ==========================================

# Vercel (Web App)
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Cloudflare (API)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=

# Mastra Cloud (AI)
MASTRA_ENVIRONMENT=development

# ==========================================
# Development
# ==========================================

# Debug flags
DEBUG=false
DEBUG_AGENTS=false
DEBUG_TOOLS=false
NODE_ENV=development